<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board"> <!-- parameterType은 생략가능, 생략됨 -->

	<select id="selectBoardList" resultType="board">
		select
		    b.*,
		    (select count(*) from attachment where board_no = b.no) attach_count
		from 
		    board b
		order by 
		    no desc
	</select>

	<select id="getTotalContents" resultType="_int">
	 select
         count(*)
      from
         board
	</select>
	
	<insert id="insertBoard">
		insert into
			board (no, title, member_id, content)
		values(
			seq_board_no.nextval,
			#{title},
			#{memberId},
			#{content}
		)
		<!-- 방금 insert된 board객체의 no컬럼(pk)값을 board.no에 대입 -->
		<selectKey resultType="_int" keyProperty="no" order="AFTER">
		select
			seq_board_no.currval
		from
			dual
		</selectKey>
		</insert>
		<!-- order="AFTER" 쿼리문번저 돌린 후에 물어봐주세요. -->
		
		<insert id="insertAttachment">
			insert into
				attachment(no, board_no, original_filename, renamed_filename)
			values(
				seq_attachment_no.nextval,
				#{boardNo},
				#{originalFileName},
				#{renamedFileName}
			)
		</insert>
		
		<select id="selectOneBoard" resultType="board">
			select 
				*
			from
				board
			where
				no = #{no}
		</select>
		
		<select id="selectAttchmentList" resultType="attachment">
			select
				*
			from
				attachment
			where
				board_no = #{no}
		</select>
		
		<select id="selectOneBoardCollection" resultMap="boardCollectionMap">
			select
			    b.*,
			    a.no attach_no,
			    a.board_no,
			    a.original_filename,
			    a.renamed_filename,
			    a.upload_date,
			    a.download_count,
			    a.status
			from 
			    board b
			  left join
			    attachment a
			      on b.no = a.board_no
			where 
			    b.no = #{no}
		</select>
		
		<resultMap type="board" id="boardCollectionMap">
			<id column="no" property="no"/>
			<result column="title" property="title"/>
			<result column="member_id" property="memberId"/>
			<result column="content" property="content"/>
			<result column="reg_date" property="regDate"/>
			<result column="read_count" property="readCount"/>
			<collection property="attachList" ofType="attachment">
				<id column="attach_no" property="no"/>
				<result column="board_no" property="boardNo"/>
				<result column="original_filename" property="originalFileName"/>
				<result column="renamed_filename" property="renamedFileName"/>
				<result column="upload_date" property="uploadDate"/>
				<result column="download_count" property="downloadCount"/>
				<result column="status" property="status" typeHandler="BooleanTypeHandler"/>
		</collection>
	</resultMap>
	<select id="selectOneAttachment" resultMap="attachmentMap">
		select
			*
		from
			attachment
		where
			no = #{no}
	</select>
	<resultMap type="attachment" id="attachmentMap">
		<result column="status" property="status" jdbcType="CHAR" javaType="_boolean" typeHandler="BooleanTypeHandler"/>
	</resultMap>
	
	<select id="selectBoardByTitle" resultType="map">
		select
			no "no",
			title "title"
		from 
			board
		where 
			title like '%' || #{searchTitle} || '%'
	</select>
</mapper>